::selection
	background rgba(0,0,0,0)
	
html
	height 100%
	padding 0
	margin 0

body
	font-family -apple-system, BlinkMacSystemFont, sans-serif
	font-size 10px
	background #ffffff
	width 100%
	height 100%
	margin 0
	padding 0
	// background linear-gradient(45deg, #37bbff, #a270ff)
	#main
		position fixed
		top 0
		left 0
		width 100%
		height 100%

#lineController
	z-index 2
	position absolute
	width 100px
	height 2px
	border-radius 2px
	background #ffffff
	top 200px
	right 30px
	.slider
		position absolute
		width 20px
		height 20px
		border-radius 20px
		left 50px
		top 1px
		margin-top -10px
		margin-left -10px
		cursor pointer
		.sliderInner
			position absolute
			width 10px
			height 10px
			border solid 1px #ffffff
			background #ffffff
			border-radius 20px
			left 10px
			top 10px
			margin-top -6px
			margin-left -6px

#circleController
	position absolute
	width 100px
	height 100px
	top 30px
	right 30px
	z-index 2
	.feeling
		display inline-block
		font-weight 800
		width 40px
		height 10px
		font-size 9px
		color #ffffff
		text-align center
		border-radius 30px
		position absolute
		top 50px
		left 50px
		margin-left -20px
		margin-top -6px
		pointer-events none
		z-index 1
		&::after
			z-index 0
			content " "
			position absolute
			top 6px
			left 20px
			margin-left -14px
			margin-top -14px
			width 26px
			height 26px
			border solid 1px #ffffff
			border-radius 20px
	.slider
		position absolute
		width 20px
		height 20px
		border-radius 20px
		left 50px
		top 50px
		margin-top -10px
		margin-left -10px
		cursor pointer
		.sliderInner
			position absolute
			width 10px
			height 10px
			border solid 1px #ffffff
			background #ffffff
			border-radius 20px
			left 10px
			top 10px
			margin-top -6px
			margin-left -6px
#debug
	position fixed
	padding 10px
	z-index 2
	top 0px
	left 100px
	width 480
	font-size 9px
	width 360px
	height 480px
	color #ffffff
	opacity 0
	transition opacity 0.6s
	&.active
		opacity 1
	#b1
		width 120px
		left 10px
		top 10px
		position absolute
	#b2
		width 120px
		left 120px
		top 10px
		position absolute
	#b3
		width 120px
		left 240px
		top 10px
		position absolute
#controls
	position fixed
	z-index 2
	top 10px
	left 10px
	.block.actions
		a	
			display block
			width 60px
			padding-top 20px
			padding-bottom 20px
			border-radius 2px
			text-align center
			text-decoration none
			margin-bottom 5px
			padding 5px
			margin-right 5px
			color #ffffff
			border solid 1px #ffffff
			&.active
				background #ffffff
				color #666666
			&:hover
				background #ffffff
				color #666666
		&.color
			margin-top 10px
#debugBut
	position absolute
	bottom 10px
	left 10px
	display block
	width 60px
	padding-top 20px
	padding-bottom 20px
	border-radius 2px
	text-align center
	text-decoration none
	padding 5px
	margin-right 5px
	color #ffffff
	z-index 100
	border solid 1px #ffffff